    <script>
        function calculate() {
            // Get values from inputs
            const username = document.getElementById('username').value || "‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏‡∏ä‡∏∑‡πà‡∏≠";
            const goal = document.getElementById('goal').value || "‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢";
            const targetMoney = parseFloat(document.getElementById('target_money').value);
            const days = parseInt(document.getElementById('days').value);
            const dailySave = parseFloat(document.getElementById('daily_save').value);

            // Validation check
            if (isNaN(targetMoney) || isNaN(days) || isNaN(dailySave)) {
                showModal("‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î", "‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô", "error");
                return;
            }

            const totalSave = days * dailySave;
            let resultMessage = `üë§ ‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ: ${username}\n`;
            resultMessage += `üéØ ‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢: ${goal}\n`;
            resultMessage += `üìÖ ‡∏£‡∏∞‡∏¢‡∏∞‡πÄ‡∏ß‡∏•‡∏≤: ${days} ‡∏ß‡∏±‡∏ô\n`;
            resultMessage += `üí∞ ‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏≠‡∏°‡∏£‡∏ß‡∏°: ${totalSave.toLocaleString('th-TH', {minimumFractionDigits: 2})} ‡∏ö‡∏≤‡∏ó\n\n`;

            let icon = "üìà";
            if (totalSave >= targetMoney) {
                const extra = totalSave - targetMoney;
                icon = "üéâ";
                resultMessage += `‚úÖ ‡∏¢‡∏¥‡∏ô‡∏î‡∏µ‡∏î‡πâ‡∏ß‡∏¢! ‡∏Ñ‡∏∏‡∏ì‡∏≠‡∏≠‡∏°‡∏ñ‡∏∂‡∏á‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß\n`;
                if (extra > 0) {
                    resultMessage += `üíµ ‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡πÄ‡∏á‡∏¥‡∏ô‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡πÄ‡∏Å‡∏¥‡∏ô‡πÄ‡∏õ‡πâ‡∏≤: ${extra.toLocaleString('th-TH', {minimumFractionDigits: 2})} ‡∏ö‡∏≤‡∏ó`;
                }
            } else {
                const missing = targetMoney - totalSave;
                icon = "üò•";
                resultMessage += `‚ùå ‡∏Ñ‡∏∏‡∏ì‡∏≠‡∏≠‡∏°‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏ñ‡∏∂‡∏á‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢\n`;
                resultMessage += `üìâ ‡∏Ç‡∏≤‡∏î‡∏≠‡∏µ‡∏Å: ${missing.toLocaleString('th-TH', {minimumFractionDigits: 2})} ‡∏ö‡∏≤‡∏ó`;
            }

            showModal("‡∏™‡∏£‡∏∏‡∏õ‡∏ú‡∏•‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏°", resultMessage, icon);
        }

        // Functions to handle UI Modal
        function showModal(title, text, iconType) {
            const modal = document.getElementById('resultModal');
            const content = document.getElementById('modalContent');
            const titleEl = document.getElementById('resultTitle');
            const textEl = document.getElementById('resultText');
            const iconEl = document.getElementById('resultIcon');

            titleEl.innerText = title;
            textEl.innerText = text;
            iconEl.innerText = iconType === "error" ? "‚ö†Ô∏è" : iconType;

            modal.classList.remove('hidden');
            setTimeout(() => {
                content.classList.remove('scale-90');
                content.classList.add('scale-100');
            }, 10);
        }

        function closeModal() {
            const modal = document.getElementById('resultModal');
            const content = document.getElementById('modalContent');
            content.classList.add('scale-90');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 200);
        }
    </script>
